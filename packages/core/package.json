{
  "name": "@junior-cms/core",
  "private": true,
  "version": "0.0.1",
  "main": "build/index.js",
  "scripts": {
    "copy-schemas": "cpx src/**/*.graphql dist",
    "build": "tsc -p tsconfig.build.json && yarn copy-schemas",
    "format": "prettier --write \"src/**/*.ts\"",
    "start": "ts-node -r src/main.ts",
    "sync": "mikro-orm schema:update",
    "start:dev": "ts-node-dev src/main.ts",
    "start:debug": "nodemon --config nodemon-debug.json",
    "test": "NODE_ENV=testing jest -w 1 --config ./jest.config.json --forceExit",
    "test:watch": "NODE_ENV=testing jest -w 1 --watch --forceExit",
    "test:cov": "NODE_ENV=testing jest -w 1 --config ./jest.config.json --coverage --forceExit"
  },
  "license": "MIT",
  "dependencies": {
    "@junior-cms/common": "1.0.0",
    "@mikro-orm/core": "^4.4.3",
    "@mikro-orm/migrations": "^4.4.4",
    "@mikro-orm/nestjs": "^4.2.0",
    "@mikro-orm/postgresql": "^4.4.3",
    "@mikro-orm/sql-highlighter": "^1.0.1",
    "@nestjs/common": "^7.6.11",
    "@nestjs/core": "^7.6.11",
    "@nestjs/graphql": "^7.9.8",
    "@nestjs/platform-express": "^7.6.12",
    "@nestjs/schedule": "^0.4.2",
    "@types/express-session": "^1.17.3",
    "apollo-server-express": "^2.21.0",
    "bcrypt": "^5.0.0",
    "body-parser": "^1.19.0",
    "cache-manager": "^3.4.0",
    "chalk": "^4.1.0",
    "class-transformer": "^0.4.0",
    "class-validator": "^0.13.1",
    "connect-redis": "^5.1.0",
    "dataloader": "^2.0.0",
    "dotenv": "^8.2.0",
    "express-rate-limit": "^5.2.5",
    "express-session": "^1.17.1",
    "helmet": "^4.4.1",
    "ioredis": "^4.22.0",
    "pg": "^8.5.1",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^6.6.3",
    "slugify": "^1.4.7"
  },
  "mikro-orm": {
    "useTsNode": true,
    "configPaths": [
      "./src/config/mikro-orm",
      "./dist/config/mikro-orm"
    ]
  },
  "devDependencies": {
    "@mikro-orm/cli": "^4.4.4",
    "@nestjs/testing": "^7.6.12",
    "@types/bcrypt": "^3.0.0",
    "@types/connect-redis": "^0.0.16",
    "@types/express-rate-limit": "^5.1.1",
    "@types/jest": "^26.0.20",
    "cpx": "^1.5.0",
    "jest": "^26.6.3",
    "nodemon": "^2.0.7",
    "ts-jest": "^26.5.1",
    "ts-node": "^9.1.1",
    "ts-node-dev": "^1.1.1",
    "tsconfig-paths": "^3.9.0",
    "typescript": "^4.1.3"
  }
}
